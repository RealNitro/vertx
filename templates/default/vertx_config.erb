JAVA_OPTS="-Xmx1024m -Xms1024m -server"
JAVA_OPTS="$JAVA_OPTS -Djava.net.preferIPv4Stack=true"
JAVA_OPTS="$JAVA_OPTS -XX:+UseG1GC"
JAVA_OPTS="$JAVA_OPTS -Dsun.net.inetaddr.ttl=1200"
JAVA_OPTS="$JAVA_OPTS -Dsun.net.inetaddr.negative.ttl=10"
JAVA_OPTS="$JAVA_OPTS -XX:+UseLargePages"
JAVA_OPTS="$JAVA_OPTS -XX:+UseStringCache"
JAVA_OPTS="$JAVA_OPTS -Dstage=<%= node.chef_environment %>"
JAVA_OPTS="$JAVA_OPTS -Dcom.sun.management.jmxremote.port=5566"
JAVA_OPTS="$JAVA_OPTS -Dcom.sun.management.jmxremote.authenticate=true"
JAVA_OPTS="$JAVA_OPTS -Dcom.sun.management.jmxremote.ssl=false"
JAVA_OPTS="$JAVA_OPTS -Dcom.sun.management.jmxremote.password.file=<%= node[:dir] %>/vertx/conf/jmxremote.password"
JAVA_OPTS="$JAVA_OPTS -Dcom.sun.management.jmxremote.access.file=<%= node[:dir] %>/vertx/conf/jmxremote.access"